
<div class="container-fluid">
  <div class="row" id="center-block">
    <div class="col-md-10 col-xs-offset-1 col-xs-10">
      <div class="row" id="imgBox">
        <img src="/assets/img/bigBurger.png" id="img" class="img-responsive">
      </div>
      <div class="row" id="content">
        <div class="col-md-5 col-s-12" id="burgersToEat">
          <h3>Hungry?</h3>
          <br>
          <ul>
            {{#each burgers}}
              {{#unless this.devoured}}
                      <form>
                      <div class="input-group">
                        <li class="form-control">{{burger_name}}</li>
                        <br>
                          <span class="input-group-btn">
                            <button class="btn btn-warning devour-button" type="submit" data-id="{{id}}" data-neweaten="{{devoured}}">Eat It!</button>
                          </span>
                      </div>
                      <br>
                    </form>
              {{/unless}}
            {{/each}}
          </ul>
        </div> 
        <div class="col-md-3 col-s-12" id="addBurger">
          <h3>Add a Burger</h3>
          <br>
          <form class="create-form">
            <div class="form-group">
              <label for="newBurger" id="addLabel">Burger Name:</label>
              <input type="text" id="newBurger" name="name">
            </div>
            <br>
            <button class="btn btn-warning btn-md add-burger-button" type="submit" id="submit">Add Burger</button>
          </form>
        </div>
        <div class="col-md-4 col-s-12" id="eatenBurgers">
          <h3>Already Eaten!</h3>
          <br>
          <ul>
            {{#each burgers}}
              {{#if this.devoured}}
                      <div id="eatenBurgerDiv">
                        <p>{{burger_name}}</p>
                      </div>
                    </form>
              {{/if}}
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>